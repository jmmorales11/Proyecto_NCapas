@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <!-- Estilos Minimalistas -->
    <style>
        /* General */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h2 {
            color: #555;
            margin-bottom: 20px;
        }

        /* Tabla */
        .minimalist-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .minimalist-table th,
            .minimalist-table td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .minimalist-table thead {
                background-color: #f7f7f7;
            }

            .minimalist-table th {
                font-size: 14px;
                font-weight: bold;
                color: #555;
            }

            .minimalist-table tbody tr:hover {
                background-color: #f1f1f1;
            }

        /* Botones */
        .button-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .button-link {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 14px;
            border-radius: 5px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .button-link:hover {
                background-color: #0056b3;
                box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
            }

        .create-btn {
            background-color: #28a745;
        }

            .create-btn:hover {
                background-color: #218838;
            }

        /* Formulario */
        form {
            margin-top: 20px;
        }

        label {
            font-size: 14px;
            color: #555;
            margin-right: 10px;
        }

        input[type="number"] {
            padding: 8px;
            font-size: 14px;
            width: 200px;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-right: 10px;
        }

        button[type="submit"] {
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            font-size: 14px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button[type="submit"]:hover {
                background-color: #0056b3;
            }

        /* Mensajes */
        .centered-message {
            max-width: 400px;
            margin: 0 auto 20px;
            padding: 15px 20px;
            border-radius: 5px;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
        }

            .centered-message.success {
                background-color: #d4edda;
                color: #155724;
                border: 1px solid #c3e6cb;
            }

            .centered-message.error {
                background-color: #f8d7da;
                color: #721c24;
                border: 1px solid #f5c6cb;
            }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <div class="button-row">
            <a href="@Url.Action("List", "Category")" class="button-link">Regresar</a>
        </div>
    </div>

    <h2>Filtrar Productos por Categoría</h2>

    @using (Html.BeginForm("Index", "Category", FormMethod.Post))
    {
        <label for="categoryId">ID de Categoría:</label>
        <input type="number" id="categoryId" name="id" required />
        <button type="submit">Filtrar Productos</button>
    }
</body>
</html>
