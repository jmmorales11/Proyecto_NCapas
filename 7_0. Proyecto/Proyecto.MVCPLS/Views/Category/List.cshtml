@model List<Entities.Category>

@{
    ViewBag.Title = "Lista de Categorías";
}

<h2>Lista de Categorías</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="centered-message success">
        @ViewBag.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="centered-message error">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="content-wrapper">
        <ul>
            <li>
                <!-- Estilo de botón con sombra -->
                <a href="@Url.Action("Index", "Category")" class="button-link">Buscar Productos por Categoria</a>
            </li>
            <li style="text-align: right;">
                <!-- Estilo de botón con sombra, alineado a la derecha -->
                <a href="@Url.Action("Create", "Category")" class="button-link create-btn">Crear categoría</a>
            </li>
        </ul>
    </div>

    <table class="minimalist-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td>
                        <!-- Acción de Editar con estilo verde -->
                        <a href="@Url.Action("Edit", "Category", new { id = category.CategoryID })" class="action-btn edit-btn">Editar</a> |
                        <!-- Acción de Eliminar con estilo rojo -->
                        <a href="@Url.Action("Delete", "Category", new { id = category.CategoryID })" class="action-btn delete-btn">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay categorías disponibles.</p>
}

<!-- Estilos Minimalistas -->
<style>
    /* General */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
    }

    h2 {
        color: #555;
    }

    /* Tabla */
    .minimalist-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .minimalist-table th,
        .minimalist-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .minimalist-table thead {
            background-color: #f7f7f7;
        }

        .minimalist-table th {
            font-size: 14px;
            font-weight: bold;
            color: #555;
        }

        .minimalist-table tbody tr {
            border-bottom: 1px solid #ddd;
        }

            .minimalist-table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .minimalist-table td a {
            color: black;
            text-decoration: none;
            font-size: 14px;
        }

            .minimalist-table td a:hover {
                text-decoration: underline;
            }

    /* Estilo del contenedor de búsqueda */
    .content-wrapper {
        margin-bottom: 20px;
    }

        .content-wrapper ul {
            list-style-type: none;
            padding: 0;
        }

        .content-wrapper li {
            margin: 5px 0;
        }

    /* Estilo del enlace con apariencia de botón */
    .button-link {
        display: inline-block;
        background-color: #007bff;
        color: black;
        padding: 10px 20px;
        text-decoration: none;
        font-size: 14px;
        border-radius: 5px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .button-link:hover {
            background-color: #0056b3;
            box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2);
            color: black;
        }

    /* Botón de Crear, alineado a la derecha */
    .create-btn {
        background-color: #28a745; /* Verde */
    }

        .create-btn:hover {
            background-color: #218838;
        }

    /* Estilo de botones de acciones (Editar y Eliminar) */
    .action-btn {
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin: 0 5px;
        transition: background-color 0.3s ease;
    }

    .edit-btn {
        background-color: #28a745; /* Verde */
        color: black;
    }

        .edit-btn:hover {
            background-color: #218838;
        }

    .delete-btn {
        background-color: #dc3545; /* Rojo */
        color: black;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }

    /* Estilo general para mensajes */
    .centered-message {
        max-width: 400px; /* Ancho máximo del mensaje */
        margin: 0 auto; /* Centrar horizontalmente */
        padding: 15px 20px;
        border-radius: 5px;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 20px; /* Espaciado inferior */
    }

        /* Estilo para mensajes de éxito */
        .centered-message.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        /* Estilo para mensajes de error */
        .centered-message.error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
</style>
